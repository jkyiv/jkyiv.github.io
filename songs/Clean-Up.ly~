\version "2.18.2"

melody = \relative c'' {
  \clef treble
  \key c \major
  \time 4/4

  g4 e g e | f8( e d e e4) r | 
}

text = \lyricmode {
  Aaa Bee Cee Dee
}

\score{
  <<
    \new Voice = "one" {
      \autoBeamOff
      \melody
    }
    \new Lyrics \lyricsto "one" \text
  >>
  \layout { }
  \midi { }
}